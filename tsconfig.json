{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
        "*": [
            "./types/*",
            "*"
        ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ]
  },
  "include": [
    "src/**/*"
  ]
}