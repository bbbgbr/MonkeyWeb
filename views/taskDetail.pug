extends devTemplate
block content
	.block-header
		h2 TASK DETAIL
	.row.clearfix
		.col-lg-12.col-md-12.col-sm-12.col-xs-12
			.card
				.header
					h2= head.title
					ul.header-dropdown.m-r--5
						li.dropdown
							a.dropdown-toggle(href='javascript:void(0);', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
								i.material-icons more_vert
							ul.dropdown-menu.pull-right
								li
									a(href='javascript:deleteTask("' + head._id + '");') Delete
				.body
					p= head.detail
	each task in tails
		+card(task)
block script
		script(src='dev/js/taskDetail.js')

mixin card(task)
	.col-lg-4.col-md-4.col-sm-6.col-xs-12
		.card
			.header.bg-blue-grey
				h2
					= task.title
					small= task.owner
			.body= task.detail