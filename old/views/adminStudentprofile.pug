extends htmlTemplate
mixin tdButt(className)
    td: button.col-12.btn.btn-outline-secondary(class=className) &nbsp;
block head
    -const pageTitle = "Admin Student Profile"
    link(href="css/component.css", rel="stylesheet")
    style.
        .cr {
            background-color: #FFE4F5!important;
            border-color: transparent!important;
        }
        .hb {
            background-color: #FFF8BA!important;
            border-color: transparent!important;
        }
        .sk {
            background-color: #D4EEF8!important;
            border-color: transparent!important;
        }
block script
    script(src="https://cdn.jsdelivr.net/npm/lodash@4.17.5/lodash.min.js")
    script(src="js/JsBarcode.code128.min.js" type="text/javascript")
    script(src="js/custom-file-input.js")
    script(src="js/adminStudentProfile.min.js")
block body
    canvas#mathBarcode(hidden='true')
    canvas#phyBarcode(hidden='true')
    canvas#cheBarcode(hidden='true')
    canvas#engBarcode(hidden='true')
    img#tableTemplate(src="#" hidden='true')
    img#smTableTemplate(src="images/summer.png" hidden='true')
    img#smReceiptTemplate(src="images/summerReceiptTemplate.png" hidden='true')
    .container-fluid
        .row
            .col-12.col-md-9.col-xl-10
                .row
                    .col-12.col-md-3
                        form
                            .form-group
                                label
                                    span.fas.fa-fw.fa-lg.fa-th-large &nbsp;
                                    |Quarter
                                select.custom-select#quarterSelect
                .row
                    .col-12.col-md-5
                        .row
                            .col-12
                                img.img-fluid.img-thumbnail#profileImg(src="images/nopic.png")
                        .row
                            .col-12#studentProfileContent
                    .col-12.col-md-7
                        img.img-fluid.img-thumbnail.float-right#recieptImg(src="images/nopic.png")
                .row
                    .col-12
                        button.btn.btn-danger(onclick="removeAllTimeTable();") Clear table
                .row
                    .col-12.collapse#mainTable
                        .table-responsive
                            table.table.table-bordered
                                thead.thead-dark
                                    tr
                                        th &nbsp;
                                        th.text-center(width='23%') TUE
                                        th.text-center(width='23%') THU
                                        th.text-center(width='23%') SAT
                                        th.text-center(width='23%') SUN
                                tbody
                                    tr
                                        th.text-center 8-10
                                        +tdButt("disabled")
                                        +tdButt("disabled")
                                        +tdButt("selector btn68")
                                        +tdButt("selector btn08")
                                    tr
                                        th.text-center 10-12
                                        +tdButt("disabled")
                                        +tdButt("disabled")
                                        +tdButt("selector btn610")
                                        +tdButt("selector btn010")
                                    tr
                                        th.text-center 13-15
                                        +tdButt("disabled")
                                        +tdButt("disabled")
                                        +tdButt("selector btn613")
                                        +tdButt("selector btn013")
                                    tr
                                        th.text-center 15-17
                                        +tdButt("disabled")
                                        +tdButt("disabled")
                                        +tdButt("selector btn615")
                                        +tdButt("selector btn015")
                                    tr
                                        th.text-center 17-19
                                        +tdButt("selector btn217")
                                        +tdButt("selector btn417")
                                        +tdButt("disabled")
                                        +tdButt("disabled")
                    .col-12.table-responsive.collapse#summerTable
                        table.table.table-bordered
                            thead.thead-dark
                                tr
                                    th &nbsp;
                                    th.text-center(width='30%') 8-10
                                    th.text-center(width='30%') 10-12
                                    th.text-center(width='30%') 13-15
                            tbody
                                tr
                                    th.text-center CR
                                    +tdButt("selector btn18")
                                    +tdButt("selector btn110")
                                    +tdButt("selector btn113")
                .row
                    .dropdown.col-6.col-md-3
                        button.col.btn.btn-outline-info.dropdown-toggle(type='button' data-toggle="dropdown") Download cover
                        .dropdown-menu
                            a#mathCoverDowload.dropdown-item.disabled(href="#") Math cover
                            a#phyCoverDowload.dropdown-item.disabled(href="#") Physic cover
                            a#cheCoverDowload.dropdown-item.disabled(href="#") Chemistry cover
                            a#engCoverDowload.dropdown-item.disabled(href="#") English cover
                            a#smMathCoverDowload.dropdown-item(href="#") Summer cover(Math)
                            a#smPhyCoverDowload.dropdown-item(href="#") Summer cover(Physics)
                    .col-6.col-md-3
                        button.col.btn.btn-outline-info#commentViewButt(type='button') Comment
                    .col-6.col-md-3
                        button.col.btn.btn-outline-info#absentViewButt(type='button') Absent
                    .col-6.col-md-3
                        button.col.btn.btn-outline-info#addChatBtn(type='button') Chat
                .row
                    .col
                        canvas#mathCover(style="border:1px solid black" width="1654" height="1170" hidden='true')
                        canvas#phyCover(style="border:1px solid black" width="1654" height="1170" hidden='true')
                        canvas#cheCover(style="border:1px solid black" width="1654" height="1170" hidden='true')
                        canvas#engCover(style="border:1px solid black" width="1654" height="1170" hidden='true')
                        canvas#smCover(style="border:1px solid black" width="1241" height="880" hidden='true')
                        canvas#appRejCover1(style="border:1px solid black" width="1654" height="1170" hidden='true')
                        canvas#appRejCover2(style="border:1px solid black" width="1654" height="1170" hidden='true')
                        canvas#smAppRejCover(style="border:1px solid black" width="1241" height="880" hidden='true')
            .col-12.offset-md-9.col-md-3.offset-xl-10.col-xl-2.p-0#statusSidebar
                .dropdown
                    button.col-12.btn.dropdown-toggle#statusButton(type="button" data-toggle="dropdown") STATUS
                    .dropdown-menu#statusDropdown
                hr
                #statusSubButton
                hr
                #chatButt
        //- Modal for add subj
        #addSubjModal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title Add Subject
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body
                        .form-group
                            label.sr-only &nbsp;
                            select.form-control#subjSelect
                    .modal-footer
                        button.btn.btn-success#addSubjButt(type="button") Add
                        button.btn.btn-danger(type="button" data-dismiss="modal") Cancel
        //- Modal for add chat
        #addChatModal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title Add chat
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body
                        .form-group
                            label.sr-only &nbsp;
                            input.form-control#chatMsg(type="text")
                    .modal-footer
                        button.btn.btn-success#addNewChatButt(type="button") Add
                        button.btn.btn-danger(type="button" data-dismiss="modal") Cancel
        //- Modal for Upload Pic
        #uploadPicModal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title Upload
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body
                        .box(align="center")
                            input#file-img.inputfile.inputfile-1(
                                type="file"
                                name="file-img[]"
                                style="opacity: 0;height: 0;"
                            )
                            label(for="file-img")
                                svg(xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17")
                                    path(d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z")
                                span เลือกรูป
                    .modal-footer
                        button.btn.btn-success#uploadPicButt(type="button") Upload
                        button.btn.btn-danger(type="button" data-dismiss="modal") Cancel
        //- Modal for change student info
        #changeStudentInfoModal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title Change Info
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body
                        .form-group
                            label(for="nicknameInput")
                                span.far.fa-fw.fa-lg.fa-user
                                |Name
                            input.form-control#nicknameInput(type="text")
                            input.form-control#firstnameInput(type="text")
                            input.form-control#lastnameInput(type="text")
                            input.form-control#nicknameEInput(type="text")
                            input.form-control#firstnameEInput(type="text")
                            input.form-control#lastnameEInput(type="text")
                        .form-group
                            label(for="gradeInput")
                                span.fas.fa-fw.fa-lg.fa-graduation-cap
                                |Grade
                            select.form-control#gradeInput
                                option(value="1") P1
                                option(value="2") P2
                                option(value="3") P3
                                option(value="4") P4
                                option(value="5") P5
                                option(value="6") P6
                                option(value="7") S1
                                option(value="8") S2
                                option(value="9") S3
                                option(value="10") S4
                                option(value="11") S5
                                option(value="12") S6
                        .form-group
                            label(for="levelInput")
                                span.fas.fa-fw.fa-lg.fa-level-up-alt
                                |Level
                            input.form-control#levelInput(type="text")
                        .form-group
                            label(for="emailInput")
                                span.far.fa-fw.fa-lg.fa-envelope
                                |Email
                            input.form-control#emailInput(type="text")
                        .form-group
                            label(for="phoneInput")
                                span.fas.fa-fw.fa-lg.fa-phone
                                |Phone
                            input.form-control#phoneInput(type="text")
                            input.form-control#parentPhoneInput(type="text")
                    .modal-footer
                        button.btn.btn-success#changeStudentInfoButt(type="button") Change
                        button.btn.btn-danger(type="button" data-dismiss="modal") Cancel
        //- Modal for view comment
        #viewCommentModal.modal.fade
            .modal-dialog.modal-lg
                .modal-content
                    .modal-header
                        h4.modal-title Comment
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body
                        #commentContentBody
                    .modal-footer
                        button.btn.btn-danger(type="button" data-dismiss="modal") Close
        //- Modal for view student absent
        #viewAbsentModal.modal.fade
            .modal-dialog.modal-lg
                .modal-content
                    .modal-header
                        h4.modal-title Student Absent
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body
                        .row
                            .col-12
                                h5 Absent Quota
                            .col-6
                                buttun#absentHistoryMQuota.col.btn.btn-outline-primary Math
                            .col-6
                                buttun#absentHistoryPQuota.col.btn.btn-outline-primary Phy
                        hr
                        .table-responsive
                            table.table.table-bordered
                                thead.thead-dark
                                    tr
                                        th.text-center Day
                                        th.text-center Subject
                                        th.text-center Reason
                                        th.text-center Timestamp
                                tbody#absentHistoryTableBody
                    .modal-footer
                        button.btn.btn-danger(type="button" data-dismiss="modal") Close