extends htmlTemplate
block head
    -const pageTitle = "Comments"
    link(rel="stylesheet", href="css/typeaheadjs.css")
    link(href="css/component.css", rel="stylesheet")
block script
    script(src="js/bootstrap3-typeahead.min.js")
    script(src="js/tutorCommentStudent.min.js")
block body
    .container
        div
            h2 Comments
        form
            .form-group
                label
                    span.fas.fa-fw.fa-lg.fa-users &nbsp;
                    |Input student name
                input.typeahead.form-control(type="text" data-provide='typeahead' placeholder="Name of Student")
        form
            .form-group
                label(for="comment")
                    span.fas.fa-fw.fa-lg.fa-comments &nbsp;
                    |Comment
                textarea.form-control#comment(rows="5")
        .btn-group.d-flex.justify-content-end
            button#uploadButton.btn.btn-primary UPLOAD
            button#postButton.btn.btn-primary SUBMIT
    .container
        hr
        h2 Recent comments
        #commentList
        div.d-flex.justify-content-center
            ul.pagination
    //- Modal for uploadPic
    .container
        #uploadModal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title Upload Picture
                        button.close(type="button" data-dismiss="modal") &times;
                    .modal-body.form-group
                        .box(align="center")
                            input#file-1.inputfile.inputfile-1(
                                type="file"
                                name="file-1[]"
                                style="opacity: 0;height: 0;"
                                data-multiple-caption="{count} files selected"
                            )
                            label(for="file-1")
                                svg(xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17")
                                    path(d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z")
                                span Add Picture
                    .modal-footer
                        button.btn.btn-success(type="button" data-dismiss="modal") SUBMIT
                        button.btn.btn-danger(type="button" data-dismiss="modal") CANCEL
    script(src="js/custom-file-input.js")